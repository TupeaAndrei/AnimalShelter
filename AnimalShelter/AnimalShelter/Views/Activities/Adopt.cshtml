                    <option value="2012">2012</option>
                    <option value="2013">2013</option>
                    <option value="2014">2014</option>
                    <option value="2015">2015</option>
                    <option value="2016">2016</option>
                    <option value="2017">2017</option>
                    <option value="2018">2018</option>
                    <option value="2019">2019</option>
                    <option value="2020">2020</option>
                    <option value="2021">2021</option>
                    <option value="2022">2022</option>
                    <option value="2023">2023</option>
                </select>
            </div>

            <div>
                <select class="form-control" asp-for="SelectedAnimal" asp-items="@(new SelectList(Model.Animals))" required>
                    <option selected disabled value="">Select an animal</option>
                </select>
            </div>



            <div id="first-last-name">
                <label class="main-label" id="name-label">First Name: </label>
                <input type="text" id="name" placeholder="John" asp-for="FirstName" required>

                <label class="main-label">Last Name: </label>
                <input type="text" id="lastName" placeholder="Smith" asp-for="LastName" required>
            </div>

            <div id="gender">
                <input type="radio" id="male" name="gender" value="male" required>
                <label class="main-label" for="male">Male</label>

                <input type="radio" id="female" name="gender" value="female" required>
                <label class="main-label" for="female">Female</label>
            </div>


            <div id="address">
                <label class="main-label" for="address1">Address: </label>
                <input type="text" id="address1" size="30" placeholder="Enter your address here" asp-for="Adress" required>


                <label class="main-label" for="town">Town: </label>
                <input type="text" id="town" size="15" placeholder="Your town" asp-for="Town" required>

                <label class="main-label" for="postcode">Postcode: </label>
                <input type="text" id="postcode" size="10" placeholder="Postcode" asp-for="PostCode" required>

            </div>


            <div id="email-phone">
                <label class="main-label" id="phone-label" for="phone">Phone: </label>
                <input type="tel" id="phone" placeholder="e.g. 0784522865" asp-for="PhoneNumber" required>

                <label class="main-label" id="email-label" for="email">Email: </label>
                <input type="email" id="email" placeholder="e.g. youremail@example.com" required size="35" asp-for="Email">

            </div>


            <div id="age">
                <ul><label class="main-label" for="age">Age of applicant:</label></ul>

                <li>
                    <input type="radio" id="u18" name="age" value="18" required>
                    <label for="u18">Under 18</label>
                </li>

                <li>
                    <input type="radio" id="18" name="age" value="24" required>
                    <label for="18">18 - 24</label>
                </li>

                <li>
                    <input type="radio" id="25" name="age" value="34" required>
                    <label for="25">25 - 34</label>
                </li>

                <li>
                    <input type="radio" id="35" name="age" value="44" required>
                    <label for="35">35 - 44</label>
                </li>

                <li>
                    <input type="radio" id="45" name="age" value="55" required>
                    <label for="45">45 and older</label>
                </li>

            </div>


            <div id="reason">
                <ul><label class="main-label">Why do you want to adopt a dog? Please check all that apply:</label></ul>
                <li>
                    <input type="checkbox" name="AdoptionReaseon" id="companion" value="companion">
                    <label for="companion">Pet & Companion</label>
                </li>

                <li>
                    <input type="checkbox" name="reason" id="gift" value="gift" asp-for="AdoptionReaseon">
                    <label for="gift">Gift</label>
                </li>

                <li>
                    <input type="checkbox" name="reason" id="hunting" value="hunting" asp-for="AdoptionReaseon">
                    <label for="hunting">Hunting Dog</label>
                </li>

                <li>
                    <input type="checkbox" name="reason" id="breeding" value="breeding" asp-for="AdoptionReaseon">
                    <label for="breeding">Breeding Dog</label>
                </li>

                <li>
                    <input type="checkbox" name="reason" id="guard" value="guard" asp-for="AdoptionReaseon">
                    <label for="guard">Guard Dog</label>
                </li>

                <li>
                    <input type="checkbox" name="reason" id="senior" value="senior" asp-for="AdoptionReaseon">
                    <label for="senior">For a Senior</label>
                </li>

                <li>
                    <input type="checkbox" name="reason" id="child" value="child" asp-for="AdoptionReaseon">
                    <label for="child">For a Child</label>
                </li>

            </div>


            <div id="allergic">
                <ul><label class="main-label">Is anyone in your household allergic to pets?</label></ul>

                <li>
                    @Html.RadioButtonFor(m => m.Allergic, "Yes", new { id = "yes" }); <label>Yes</label>
                </li>
                    @Html.RadioButtonFor(m => m.Allergic, "No", new { id = "no" }); <label>No</label>
                <li>
                    @Html.RadioButtonFor(m => m.Allergic, "Sometimes", new { id = "sometimes" }); <label>Sometimes</label>
                </li>

            </div>


            <div id="pets-household">
                <ul>
                    <label class="main-label" id="number-label">
                        How many pets are already in your household?
                    </label>
                </ul>
                <li>
                    @Html.TextBoxFor(m => m.PetCount, new { type = "number", min = "0", step = "0.01" })
                </li>
            </div>


            <div id="housing">
                <label class="main-label">What type of housing you reside?</label>
                <select id="dropdown" asp-for="HouseType">
                    <option disabled selected>Select an option</option>
                    <option value="Appartment">Apartment / Condo</option>
                    <option value="House">House</option>
                    <option value="Other">Other</option>
                </select>
            </div>


            <div id="prepare">
                <label class="main-label">How did you prepare yourself?</label>
            </div>
            <div id="textarea">
                <textarea id="comments" rows="10" cols="70" placeholder=" Write here how did you prepare yourself for adoption." asp-for="AdoptionReaseon"></textarea>
            </div>

            <div id="button">
                <button type="submit" id="submit" form="survey-form">Submit</button>
            </div>


