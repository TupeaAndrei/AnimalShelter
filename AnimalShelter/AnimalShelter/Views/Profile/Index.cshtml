@model ProfileViewModel
@{
    ViewData["Title"] = "Personal Page";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://code.jquery.com/jquery-1.10.1.min.js" integrity="sha256-SDf34fFWX/ZnUozXXEH0AeB+Ip3hvRsjLwp6QNTEb3k=" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/user.css" />
    <link rel="shortcut icon" href="/images/profileIcon.png">
    <title>Rescue Paws - PROFILE</title>

</head>

<body>
    <div id="title">
        <svg xmlns="http://www.w3.org/2000/svg">


            <filter id="motion-blur-filter" filterUnits="userSpaceOnUse">

                <feGaussianBlur stdDeviation="100 0"></feGaussianBlur>
            </filter>
        </svg>

        <span filter-content="S">Welcome to your own page</span>
    </div>

    <div id="wrapper">
        <div id="container">
            <h3>These are the adoptions you made</h3><br><br>
        </div>
    </div>


    <div class="container-fluid">
        <table class="table scroll table-striped table-dark">
            <thead>
                <tr style="outline: thin solid;">
                    <th scope="col">#</th>
                    <th scope="col">Pet Name</th>
                    <th scope="col">Adoption Date</th>
                    <th scope="col">Adoption Reason</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Adoptions)
                {
                <tr style="outline: thin solid">
                    <td>@Html.DisplayFor(m => item.Id)</td>
                    <td>@Html.DisplayFor(m => item.AnimalName)</td>
                    <td>@Html.DisplayFor(m => item.Date)</td>
                    <td>@Html.DisplayFor(m => item.AdoptionReason)</td>
                </tr>
                }


            </tbody>
        </table>
    </div><br>

    <br><br><br><br>
    <div id="wrapper">
        <div id="container">
            <h3>These are the donations you made</h3><br><br>
        </div>
    </div>

    <div class="container-fluid" style="margin-bottom: 200px;">
        <table class="table scroll table-striped table-dark">
            <thead>
                <tr style="outline: thin solid;">
                    <th scope="col">#</th>
                    <th scope="col">Donation Amount</th>
                    <th scope="col">Donation Date</th>
                    <th scope="col">Payment Method</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Donations)
                {
                <tr style="outline: thin solid">
                    <td>@Html.DisplayFor(m => item.DonationID)</td>
                    <td>@Html.DisplayFor(m => item.Sum)</td>
                    <td>@Html.DisplayFor(m => item.Date)</td>
                    <td>@Html.DisplayFor(m => item.PaymentMethod)</td>

                </tr>
                }
            </tbody>
        </table>
    </div>
</body>

</html>
