@model AnimalShelter.ViewModels.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_layout.cshtml";

}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/login.css" />
    <link rel="shortcut icon" href="/images/loginIcon.png">
    <title>Rescue Paws - Login</title>

</head>
<body>
    <div class="container-fluid">
        <div class="col-md-4 col-md-offset-4" id="login">

            <h1 style="margin-top: 30px; text-shadow: 2px 2px 5px black;">Use a local account to log in.</h1>
            <hr />
            <form id="logform" asp-action="ConfirmLogin">
                <div asp-validation-summary="All" class="text-danger"></div>
                <label>Email:</label>
                <input id="emailTxt" class="form-control" asp-for="Email" placeholder="Enter email..." />
                @Html.ValidationMessageFor(model => model.Email)

                <label>Password:</label>
                <input id="passwordTxt" class="form-control" asp-for="Password" placeholder="Enter password...." />
                <div class="wthree-text">
                    <label class="anim">
                        <input type="checkbox" class="checkbox" required="">
                        <strong><span>Remember me</span></strong>
                    </label>
                    <div class="clear"> </div>
                </div><br>
                <div class="text-center">
                    <button type="submit" class="btn btn-dark btn-lg active" aria-pressed="true">Log in</button>
                </div>
            </form>
        </div>
    </div>

   

</body>



</html>
