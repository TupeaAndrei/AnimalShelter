@model AnimalShelter.ViewModels.RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/register.css" />
</head>

<body>
    <div class="container-fluid">
        <div class="col-md-4 col-md-offset-4" id="register">
            <h1 style="margin-top: 20px; text-shadow: 2px 2px 5px black;">Create an account</h1>
            <hr />
            <form id="regform" asp-action="ConfirmRegister" class="form-group">
                <div asp-validation-summary="All" class="text-danger">
                </div>
                <label>Email:</label>
                <input id="emailTxt" class="form-control" asp-for="Email" placeholder="Enter email..." />

                <label>Password:</label>
                <input class="form-control" asp-for="@Model.Password" placeholder="Enter password..." />

                <label>Confirm password:</label>
                <input class="form-control" asp-for="@Model.ConfirmPassword" placeholder="Confirm password..." />

                <div class="wthree-text">
                    <label class="anim">
                        <input type="checkbox" class="checkbox" required="">
                        <strong><span>I Agree To The Terms & Conditions</span></strong>
                    </label>
                    <div class="clear"> </div>
                </div><br>
                <div class="text-center">
                    <button type="submit" class="btn btn-lg btn-dark active" form="regform" aria-pressed="true">Register</button>
                </div>
            </form>
            <strong>Already have an Account? <a href="#" onclick="@("window.location.href='" + @Url.Action("Login", "Account") + "'");"> Login Now!</a></strong>

        </div>
    </div>

</body>
</html>