
@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/contact.css"/>
</head>

<body>
    <div class="container-fluid w-100">

        <h1 style="margin-top: 20px; text-shadow: 2px 2px 5px black; text-align: center;">Contact us</h1>
        <hr />
        <div class="container-fluid" id="contact" style="margin-left:15px;">
            <div class="container-fluid w-100" id="email">
                <h3 style="margin-top: 65px;" id="help">E-mail</h3>
                <a href="" id="help2"><ins>rescuepaws@gmail.com</ins></a>
            </div>
            <div class="container-fluid" id="email">
                <h3 style="margin-top: 65px;" id="help">Phone number</h3>
                <a id="help2"><ins>0755900832</ins></a>
            </div>
            <div class="container-fluid" id="email">
                <h3 style="margin-top: 65px;" id="help">Address</h3>
                <a id="help2"><ins>Brasov, Romania</ins></a>
            </div>

        </div>
        <div class="container-fluid" style="margin-bottom:125px;">
            <h5 style="margin-top: 80px; color: black; background-color: #f5f5f5;  opacity: 0.7; width: 845px; height: 22px;">If you have any questions, let us know! We will try to respond as fast as possible. Thank you!</h5>
            <div class="form">
                <h3 style="text-align: center; color: black;"><strong>We serve in Brasov county</strong></h3>
                <form class='form-contact'>
                    <input type='hidden' name='form-name' />
                    <input type="hidden" name="subject" />
                    <p class="form-field">
                        <label for="yourName" style="margin-right: 12px;">Name</label>
                        <input type="text" id="yourName" name="yourName" value="" />
                    </p>
                    <p class="form-field">
                        <label for="yourEmail" style="margin-right: 12px;">E-mail</label>
                        <input type="text" id="yourEmail" name="yourEmail" value="" />
                    </p>
                    <p class="form-field">
                        <label for="yourPhone" style="margin-right: 12px;">Phone number</label>
                        <input type="number" id="yourPhone" name="yourPhone" value="" />
                    </p>

                    <p class="form-field">
                        <label for="yourMessage" style="margin-right: 12px;">Message</label>
                        <textarea id="yourMessage" name="yourMessage"></textarea>
                    </p>
                    <p class="form-check">
                        <input type="checkbox" value="" name="iAcceptPrivacyPolicy" id="iAcceptPrivacyPolicy" />
                        <label for="iAcceptPrivacyPolicy">I accept the terms and conditions.</label>
                    </p>

                    <button type="submit" style="margin-top: 17px; margin-left: 40px;" class="btn btn-dark btn-lg">Send</button>


                </form>
            </div>
        </div>

    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>


</body>

</html>
